{
  "name": "helpmybestlife-platform",
  "version": "1.2.0",
  "description": "HelpMyBestLife Platform - Full Stack Development",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "db:setup": "cd backend && npm run db:push",
    "db:studio": "cd backend && npm run db:studio",
    "db:reset": "cd backend && npm run db:migrate",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy:staging": "node scripts/deploy-staging.js",
    "deploy:production": "node scripts/deploy-production.js",
    "backup": "node scripts/backup.js",
    "clean": "npm run clean:node_modules && npm run clean:builds",
    "clean:node_modules": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "clean:builds": "rm -rf frontend/dist backend/dist",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}